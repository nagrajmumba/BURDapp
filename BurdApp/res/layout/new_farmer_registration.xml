<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    
    
    <ScrollView 
         android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        >
        <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    >
    
   
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
     android:layout_gravity="center_vertical"
        >

        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#0099cc"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="@string/personal_details"
            android:textSize="18sp"/>
        
        </LinearLayout>
        
    
        
    <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="2dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/blue_line"
   	        android:textSize="14sp"
   	        />
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp" 
        >

        <EditText
            android:id="@+id/farmerName"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="@string/full_name"
            android:textSize="18sp"/>
        
        </LinearLayout>
        
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip">

        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#0099cc"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/contact_details"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
        
        </LinearLayout>
        
     
     <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="2dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/blue_line"
   	        
   	        />
     
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
         android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip">
        
         
         <Spinner
    android:id="@+id/telephone_spinner"
    android:layout_width="wrap_content"
    android:layout_height="33dp" />
         
        

        <EditText
            android:id="@+id/mobile"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            
            android:inputType="number"
            android:maxLength="10"
            android:textSize="18sp"
            
            />
        
        </LinearLayout>
        
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip" >

        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#0099cc"
            android:layout_height="wrap_content"
            android:text="@string/address"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
        
        </LinearLayout>
        
    
     <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="2dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/blue_line"
   	      
   	        />
        
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" >

        <EditText
            android:id="@+id/street"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="@string/street_name"
            android:textSize="18sp"
           
            />
        
        </LinearLayout>
        
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" >

        <EditText
            android:id="@+id/landmark"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="@string/landmark"
            android:textSize="18sp"
           
            />
        
        </LinearLayout>
        
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" >

        <EditText
            android:id="@+id/city"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="@string/city"
            android:textSize="18sp"
           
            />
        
        </LinearLayout>
     
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" >

        <EditText
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="@string/state"
            android:textSize="18sp"
           
            />
        
         <EditText
             android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="@string/pincode"
            android:inputType="number"
            android:textSize="18sp"
           
            />
        
        
        </LinearLayout>
        
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" >

        <TextView
            android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textColor="#0099cc"
            android:layout_height="wrap_content"
            android:text="@string/item_and_quantity"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"/>
        
        </LinearLayout>
        
      
       <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="2dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/blue_line"
   	        android:textSize="14sp"
   	        />
        
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip">

        <TextView
            android:layout_width="match_parent"
            
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/kernel"
            android:textSize="18sp"
            android:layout_weight="0.2"
            
           />
        
        <EditText
            android:id="@+id/kernel"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="4"
            android:textSize="18sp"
            android:gravity="right"
            android:layout_weight="0.7"
            android:inputType="number"
            android:maxLines="1"
            
            />
        
         <TextView
            android:layout_width="wrap_content"
            
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/kilo"
            android:textSize="18sp"
           
            
           />
        
        </LinearLayout>
        
       
       <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="1dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/grey_line"
   	        
   	        />
       
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip">

        <TextView
            android:layout_width="match_parent"
            
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/seed"
            android:layout_weight="0.2"
            android:textSize="18sp"
           />
        
        <EditText
            android:id="@+id/seed"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="4"
           android:textSize="18sp"
            android:gravity="right"
            android:inputType="number"
            android:layout_weight="0.7"
           
            />
        
         <TextView
            android:layout_width="wrap_content"
            
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/kilo"
            android:textSize="18sp"
            
           />
        
        </LinearLayout>
      
        <TextView 
   	        
   	        android:layout_width="match_parent"
   	        android:layout_height="1dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/grey_line"
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        
   	        />
        
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:orientation="horizontal"
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/fruit"
            android:textSize="18sp"
           />
        
        <EditText
            android:id="@+id/fruit"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="4"
            android:textSize="18sp"
            android:inputType="number"
            android:layout_gravity="right"
             android:gravity="right"
            />
        
         <TextView
            android:layout_width="wrap_content"
            
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/kilo"
            android:textSize="18sp"
            
           />
        
        </LinearLayout>
        <TextView 
   	        
   	        android:layout_width="match_parent"
   	        android:layout_height="1dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/grey_line"
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        
   	        />
        
       <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp" 
        android:orientation="horizontal"
        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="0.2"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/pulp"
            android:textSize="18sp"
           />
        
        <EditText
            android:id="@+id/pulp"
            android:layout_weight="0.7"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="00"
            android:maxLength="4"
            android:textSize="18sp"
            android:inputType="number"
            android:layout_gravity="right"
             android:gravity="right"
            />
        
         <TextView
            android:layout_width="wrap_content"
            
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:text="@string/kilo"
            android:textSize="18sp"
            
           />
        
        </LinearLayout>
      
        <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="1dip"
   	        android:layout_weight="1"
   	        android:background="@drawable/grey_line"
   	        
   	        />
        
        <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="5dip"
   	        android:layout_weight="1"
   	        
   	        
   	        />
        
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/registerfarmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="@string/accept" />

        <Button
            android:id="@+id/cancelfarmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="@string/reject" />

        </LinearLayout>
        
         <TextView 
   	        android:layout_marginLeft="5dip"
     android:layout_marginRight="5dip"
   	        android:layout_width="match_parent"
   	        android:layout_height="5dip"
   	        android:layout_weight="1"
   	        
   	        
   	        />
     </LinearLayout>
     
     </ScrollView>
</LinearLayout>